<%- include('partials/header', { pageTitle: 'Register - LearnIt!' }); -%>
  <main class="container mt-5"> <!-- Use the main element to wrap your content -->
    <h1>SIGN - UP</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <!-- Makes POST request to /login route -->
            <form action="/signUp" method="POST">
              <div class="form-group">
                <label for="First name">First Name</label>
                <input class="form-control" name="fname">
              </div>
              <div class="form-group">
                <label for="Last name">Last Name</label>
                <input class="form-control" name="lname">
              </div>
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <div class="form-group">
                <label for="password">Confirm Password</label>
                <input type="password" class="form-control" name="confirmPassword">
              </div>
              <button type="submit" class="btn btn-dark">Sign up</button>
            </form>
            <p class="mt-3">Already have an account? <a href="/login">Login here</a></p>
          </div>
        </div>
      </div>
    </div> <!-- End of the first row for login form -->
  </main> <!-- End of the main content -->

  <%- include('partials/footer'); -%>